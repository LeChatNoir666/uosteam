//Assign and equip weapon / sheild Great for after
//recalling or getting disarmed
//
if not @findlayer 'self' 1
  equipitem 'weapon' 1
  pause 100
  if not @findlayer 'self' 1
    promptalias 'weapon'
    equipitem 'weapon' 1
  endif
endif
if not @findlayer 'self' 2
  equipitem 'shield' 2
  pause 100
  if not @findlayer 'self' 2
    promptalias 'shield'
    equipitem 'shield' 2
  endif
endif
